<div class="container login-container">
  <div class="row">
    <div class="col-md-4">
      <h2 class="loginheaders">
        Login
      </h2>
      <br />
      <form class="form login-form">
        <div class="form-group">
          <label for="email-login">
            UserName
          </label>
          <input class="form-input" type="text" id="email-login" />
        </div>
        <br />
        <div class="form-group">
          <label for="password-login">
            Password:
          </label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-success loginBtn" type="submit">
            Login
          </button>
        </div>
      </form>
    </div>
    <div class="col-md-4">
      <h2 class="loginheaders">
        Signup
      </h2>
      <br />
      <form class="form signup-form">
        <div class="form-group">
          <label for="name-signup">
            UserName
          </label>
          <input class="form-input" type="text" id="name-signup" />
        </div>
        <br />
        <div class="form-group">
          <label for="password-signup">
            Password:
          </label>
          <input class="form-input" type="password" id="password-signup" />
        </div>
        <div class="form-group">
          <button class="btn btn-success signupBtn" type="submit">
            Signup
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="./js/login.js"></script>