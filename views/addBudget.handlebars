<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-12">
    <h3>Budget</h3>
<br>
    <div class="row">
      <div class="col-md-4">
        <h4>Expenses</h4>
        <br>
        <form class="expense-form">
          <div class="mb-3">
            <label for="expense-name" class="form-label">Expense name</label>
            <input type="text" class="form-control" id="expense-name" name="expense-name">
          <div id="expense" class="form-text">Rent, Cable, Groceries etc.</div>
          </div>
            <label for="expense-type" class="form-label">Expense type</label>
            <select id ="select" class="form-select form-select-md mb-3" aria-label="form-select-md expense-type">
             <option selected>Choose type</option>
            <option value="Housing">Housing</option>
            <option value="Transportation">Transportation</option>
            <option value="Food">Food</option>
            <option value="Utilities">Utilities</option>
            <option value="Medical/Healthcare">Medical/Healthcare</option>
            <option value="Household Items/Supplies">Household Items/Supplies</option>
            <option value="Personal/Entertainment">Personal/Entertainment</option>
            <option value="Misc.">Misc.</option>
            </select>
          <div class="mb-3">
            <label for="amount" class="form-label">Amount</label>
            <input type="number" class="form-control" id="amount" name="amount">
          </div>
          <div class="mb-3">
            <label for="date" class="form-label">Due Date</label>
            <input type="date" class="form-control" id="date" name="date">
          </div>
          <button type="submit" class="btn btn-success">Add</button>
        </form>
        <div class="col-md-12">
         <ul class="expList">
           {{#each expenses}}
            <li class="expList">
             Expense name: <span class="income">{{expense_name}}</span><br>
             Expense Type: <span class="income">{{expense_type}}</span><br>
             Expense Amount: $<span class="income">{{amount}}</span><br>
             Expense Date:<span class="income"> {{date}}</span>

            </li>
           {{/each}}
         </ul>

  </div>
    </div>


    <div class="col-md-4">
      <h4>Income</h4>
      <br>
        <form class= "income-form">
          <div class="mb-3">
            <label for="income-name" class="form-label">Income name</label>
            <input type="text" class="form-control" id="income-name" name="income-name">
          <div id="income" class="form-text">My Paycheck, Retirement check etc. </div>
    </div>
          <div class="mb-3">
            <label for="amount2" class="form-label">Amount</label>
            <input type="number" class="form-control" id="amount2" name="amount2">
          </div>
          <div class="mb-3">
            <label for="paydate" class="form-label"> Date</label>
            <input type="date" class="form-control" id="paydate" name="paydate">
          </div>
          <button type="submit" class="btn btn-success">Add</button>
        </form>
         <div class="col-md-12">
         <ul class="incomeList">
           {{#each income}}
            <li class="incomeList">
             Income Name: <span class="income">{{name}}</span><br>
             Income Amount: $<span class="income">{{amount}}</span><br>
             Income date: <span class="income">{{date}}</span> 

            </li>
           {{/each}}
         </ul>

  </div>
  
  </div>
</div>

 
</div>

