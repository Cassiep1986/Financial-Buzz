<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-12">
    <h3>Budget</h3>
<br>
    <div class="row">
      <div class="col-md-4">
        <h4>Expenses</h4>
        <br>
        <form class="new-project-form">
          <div class="mb-3">
            <label for="expense-name" class="form-label">Expense name</label>
            <input type="text" class="form-control" id="expense-name" name="expense-name">
          <div id="expense" class="form-text">Rent, Cable, Groceries etc.</div>
          </div>
            <label for="expense-type" class="form-label">Expense type</label>
            <select class="form-select form-select-md mb-3" aria-label=".form-select-md expense-type">
             <option selected>Choose type</option>
            <option value="1">Housing</option>
            <option value="2">Transportation</option>
            <option value="3">Food</option>
            <option value="4">Utilities</option>
            <option value="5">Medical/Healthcare</option>
            <option value="6">Household Items/Supplies</option>
            <option value="7">Personal/Entertainment</option>
            <option value="8">Misc.</option>
            </select>
          <div class="mb-3">
            <label for="amount" class="form-label">Amount</label>
            <input type="number" class="form-control" id="amount" name="amount">
          </div>
          <div class="mb-3">
            <label for="date" class="form-label">Due Date</label>
            <input type="date" class="form-control" id="date" name="date">
          </div>
          <button type="submit" class="btn btn-success">Add</button>
        </form>
    </div>
    <div class="col-md-4">
      <h4>Income</h4>
      <br>
        <form>
          <div class="mb-3">
            <label for="income-name" class="form-label">Income name</label>
            <input type="text" class="form-control" id="income-name" name="income-name">
          <div id="income" class="form-text">My Paycheck, Retirement check etc. </div>
    </div>
          <div class="mb-3">
            <label for="amount2" class="form-label">Amount</label>
            <input type="number" class="form-control" id="amount2" name="amount2">
          </div>
          <button type="submit" class="btn btn-success">Add</button>
        </form>
  </div>
  <div class="col-md-4">
         <ul>
           {{#each expenses}}
            <li>
             expense name:   {{expense_name}} <br>
              {{expense_type}}  <br>
              {{amount}}

            </li>
           {{/each}}
         </ul>

  </div>
</div>

 {{#if expense.length}}
  <div class="col-md-6 expense-list">
    <h3>Expenses:</h3>

    {{#each expense as |expense|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a {{expense.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/addBudget.js"></script>
