<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add Budget</h3>

    <br>

<form>
  <div class="mb-3">
    <label for="expense" class="form-label">Expense</label>
    <input type="text" class="form-control" id="expense" aria-describedby="expenseexample">
    <div id="expenseexample" class="form-text">Rent, Cable, Groceries etc.</div>
  </div>
  <div class="mb-3">
    <label for="amount" class="form-label">Amount</label>
    <input type="number" class="form-control" id="amount">
  </div>
  <button type="submit" class="btn btn-success">Add</button>
</form>


<script src="./js/addBudget.js"></script>
